#!/bin/bash

# Before building, this needs to be invoked:    $scl enable rh-nodejs10 bash

date
printf '\n--- BEGIN: build'

# ------------------------------------------------------------------------------
printf '\n$node --version\n'
node --version

printf '\n$npm --version\n'
npm --version

# ------------------------------------------------------------------------------
cd $HOME/repos/mpi-proc-ang
printf '\n$pwd\n'
pwd

printf '\n$rm -rf dist\n'
rm -rf dist

# ------------------------------------------------------------------------------
export NODE_OPTIONS="--max_old_space_size=4096"

printf '\n$npm install\n'
npm install

printf '\n$ng build --proc\n'
ng build --prod

# ------------------------------------------------------------------------------
popd
printf '\nEND: build\n'
date
